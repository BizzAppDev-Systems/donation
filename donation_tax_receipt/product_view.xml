<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<record id="product_donation_form" model="ir.ui.view">
    <field name="model">product.product</field>
    <field name="inherit_id" ref="donation.product_donation_form"/>
    <field name="arch"  type="xml">
        <div name="donation" position="after">
            <div name="tax_receipt">
                <field name="tax_receipt_ok" attrs="{'invisible': [('donation', '=', False)]}"/>
                <label for="tax_receipt_ok" attrs="{'invisible': [('donation', '=', False)]}"/>
            </div>
        </div>
    </field>
</record>

</data>
</openerp>
